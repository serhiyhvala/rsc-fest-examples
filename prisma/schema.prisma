// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Comments {
  id         String   @id @default(uuid())
  user_name  String   @unique
  comment    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
